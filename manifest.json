{
  "manifest_version": 2,

  "name": "JQL helper",
  "description": "This extension will easily switch between preconfigured JIRA filters",
  "version": "1.0",

  "background": {
      "scripts": [ "background.js" ]
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "permissions": [
   "activeTab",
   "storage"
  ]
}